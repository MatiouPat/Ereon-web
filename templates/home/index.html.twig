{% extends 'home/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        // Fonction pour stocker le token JWT dans le stockage local
        function storeTokenInLocalStorage(token) {
            localStorage.setItem('token', token);
            console.log('Token JWT stocké dans le stockage local avec succès');
        }

        // Appeler la fonction pour stocker le token JWT dans le stockage local
        var token = "{{ token }}"; // Récupérer le token JWT depuis Twig
        storeTokenInLocalStorage(token);
    </script>
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
    <main id="editor">
        <map-box></map-box>
        <editor></editor>
    </main>
    <aside id="right-side-box" class="right-side-box">
        <right-side-box></right-side-box>
    </aside>
{% endblock %}
