{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
    <aside>
        <h1>Person index</h1>
    </aside>
    <main>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for person in people %}
                <tr>
                    <td>{{ person.id }}</td>
                    <td>{{ person.name }}</td>
                    <td>
                        <a href="{{ path('app_person_show', {'id': person.id}) }}">show</a>
                        <a href="{{ path('app_person_edit', {'id': person.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_person_new') }}">Create new</a>
    </main>
{% endblock %}
